@model MoneyFlow.Models.ViewModels.CreateDataFormViewModel<Product>
@using MoneyFlow.Models.ViewModels
@using MoneyFlow.Constants
@using de = MoneyFlow.Utils.DataExtractor

@{
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
    var productType = de.GetEnumDataList<ProductTypeEnum>();
}

<h4 class="text-center">Produk Baru</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" action="/product/create" enctype="multipart/form-data">
            <div class="form-group">
                @await Html.PartialAsync("~/Views/Shared/Components/File/UploadImageFormView.cshtml", Model.UploadFileForm)
            </div>
            <div class="form-group">
                <label asp-for="Data.Name" class="control-label">Produk</label>
                <input asp-for="Data.Name" class="form-control" placeholder="Nama produk"/>
                <span asp-validation-for="Data.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.ProductType" class="control-label">Tipe Produk</label>
                <select asp-for="Data.ProductType" class="form-control">
                    @foreach (string enumData in productType)
                    {
                        <option value="@enumData">@enumData</option>
                    }
                </select>
                <span asp-validation-for="Data.ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.Price" class="control-label">Harga</label>
                <input asp-for="Data.Price" class="form-control" placeholder="Harga satuan produk"/>
                <span asp-validation-for="Data.Price" class="text-danger"></span>
            </div>
            <div class="form-group flex-grow-1">
                <input type="submit" value="Buat produk" class="btn btn-primary w-100" />
            </div>
        </form>
        <form method="get" action="/product">
            <div class="form-group flex-grow-1">
                <input type="submit" value="Kembali" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>